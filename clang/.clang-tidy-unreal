# clang-tidy configuration for Unreal Engine projects
# Copy this to your UE project root as .clang-tidy
#
# Unreal Engine Coding Standard:
# https://dev.epicgames.com/documentation/en-us/unreal-engine/epic-cplusplus-coding-standard-for-unreal-engine

Checks: >
  -*,
  bugprone-*,
  -bugprone-easily-swappable-parameters,
  -bugprone-narrowing-conversions,
  -bugprone-macro-parentheses,
  modernize-use-nullptr,
  modernize-use-override,
  modernize-use-equals-default,
  modernize-use-equals-delete,
  performance-*,
  readability-identifier-naming,
  readability-braces-around-statements,
  readability-inconsistent-declaration-parameter-name,
  readability-misleading-indentation,
  readability-redundant-member-init,
  readability-redundant-smartptr-get,
  readability-redundant-string-init,
  readability-simplify-boolean-expr,
  readability-static-accessed-through-instance,
  readability-uniqueptr-delete-release,
  misc-*,
  -misc-non-private-member-variables-in-classes,
  -misc-const-correctness,
  clang-analyzer-*,
  -clang-analyzer-security.insecureAPI.DeprecatedOrUnsafeBufferHandling

WarningsAsErrors: ''

HeaderFilterRegex: '.*'

CheckOptions:
  #
  # Unreal Engine Naming Conventions
  # https://dev.epicgames.com/documentation/en-us/unreal-engine/epic-cplusplus-coding-standard-for-unreal-engine
  #

  # Classes derived from UObject: UMyClass
  - key: readability-identifier-naming.ClassPrefix
    value: ''  # Can't enforce U/A/F prefixes globally, done per-project

  # All types use PascalCase (not snake_case)
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.StructCase
    value: CamelCase
  - key: readability-identifier-naming.EnumCase
    value: CamelCase
  - key: readability-identifier-naming.TypedefCase
    value: CamelCase
  - key: readability-identifier-naming.TypeAliasCase
    value: CamelCase

  # Functions: PascalCase (GetHealth, not get_health)
  - key: readability-identifier-naming.FunctionCase
    value: CamelCase
  - key: readability-identifier-naming.MethodCase
    value: CamelCase

  # Variables: PascalCase (Health, not health)
  - key: readability-identifier-naming.VariableCase
    value: CamelCase
  - key: readability-identifier-naming.ParameterCase
    value: CamelCase
  - key: readability-identifier-naming.MemberCase
    value: CamelCase

  # Private members: NO suffix (UE doesn't use trailing underscore)
  - key: readability-identifier-naming.PrivateMemberSuffix
    value: ''

  # Boolean variables: prefix with 'b' (bIsAlive, bShouldRun)
  - key: readability-identifier-naming.VariablePrefix
    value: ''  # Can't enforce globally

  # Constants: const variables use k prefix (kMaxHealth)
  # UPROPERTY constants and defines use ALL_CAPS
  - key: readability-identifier-naming.ConstantCase
    value: CamelCase
  - key: readability-identifier-naming.ConstantPrefix
    value: 'k'

  # Enum values: PascalCase (EMyEnum::FirstValue)
  - key: readability-identifier-naming.EnumConstantCase
    value: CamelCase

  # Namespaces: PascalCase (namespace UE::MySystem)
  - key: readability-identifier-naming.NamespaceCase
    value: CamelCase

  # Template parameters: T prefix (TArray, TObjectPtr)
  - key: readability-identifier-naming.TemplateParameterCase
    value: CamelCase
  - key: readability-identifier-naming.TemplateParameterPrefix
    value: 'T'

  # Modernize settings
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'

  # Don't suggest range-based for loops (UE uses iterators differently)
  - key: modernize-loop-convert.MinConfidence
    value: risky

  # Don't over-use auto (UE prefers explicit types for clarity)
  - key: modernize-use-auto.MinTypeNameLength
    value: 20
  - key: modernize-use-auto.RemoveStars
    value: false

  # Performance
  - key: performance-move-const-arg.CheckTriviallyCopyableMove
    value: false
  - key: performance-unnecessary-value-param.IncludeStyle
    value: llvm

  # Readability
  - key: readability-braces-around-statements.ShortStatementLines
    value: 0  # Always use braces (UE standard)
  - key: readability-implicit-bool-conversion.AllowPointerConditions
    value: true
  - key: readability-implicit-bool-conversion.AllowIntegerConditions
    value: false  # UE uses explicit bool conversions
  - key: readability-function-size.LineThreshold
    value: 200  # UE functions can be longer
  - key: readability-function-size.StatementThreshold
    value: 100

# Additional notes for Unreal Engine:
#
# Type Prefixes (manually enforce):
# - U prefix: Classes derived from UObject (UMyActor, UMyComponent)
# - A prefix: Classes derived from AActor (AMyCharacter, AMyGameMode)
# - F prefix: Plain C++ classes/structs (FVector, FMyStruct)
# - E prefix: Enums (EMyEnum)
# - I prefix: Abstract interfaces (IMyInterface)
# - T prefix: Template classes (TArray, TMap, TObjectPtr)
# - b prefix: Boolean variables (bIsAlive, bShouldUpdate)
#
# Use Unreal's containers:
# - TArray instead of std::vector
# - TMap instead of std::map
# - TSet instead of std::set
# - FString instead of std::string
#
# Use Unreal's smart pointers:
# - TObjectPtr<UMyClass> for UObject pointers (UE 5.0+)
# - TSharedPtr<FMyClass> for shared ownership
# - TUniquePtr<FMyClass> for unique ownership
# - TWeakPtr<FMyClass> for weak references
#
# Use Unreal's macros:
# - check(Condition) for assertions that should crash
# - ensure(Condition) for assertions that log but continue
# - verify(Condition) for ensure that also evaluates in shipping builds
#
# Tab indentation (configure your editor):
# - Use tabs, not spaces
# - Tab width = 4 spaces visually
#
# Braces: Allman style (already in .clang-format)
# - Opening brace on new line
# - Even for single-line if statements
